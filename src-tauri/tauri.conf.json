{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Atlas UX",
  "version": "0.1.0",
  "identifier": "com.deadappcorp.atlasux",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "Atlas UX",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/icon.ico"
    ]
  }
}
