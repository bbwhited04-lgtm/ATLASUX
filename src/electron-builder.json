{
  "appId": "com.atlasux.app",
  "productName": "Atlas UX",
  "copyright": "Copyright Â© 2026 Atlas UX",
  "directories": {
    "output": "installers",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "msi",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "Atlas-UX-Setup-${version}-${arch}.${ext}",
    "publisherName": "Atlas UX Inc.",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Atlas UX",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "deleteAppDataOnUninstall": true,
    "runAfterFinish": true,
    "license": "LICENSE.txt"
  },
  "msi": {
    "oneClick": false,
    "perMachine": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Atlas UX",
    "runAfterFinish": true
  },
  "portable": {
    "artifactName": "Atlas-UX-Portable-${version}.exe"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64", "universal"]
      },
      {
        "target": "pkg",
        "arch": ["x64", "arm64", "universal"]
      },
      {
        "target": "zip",
        "arch": ["universal"]
      }
    ],
    "category": "public.app-category.productivity",
    "icon": "build/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "artifactName": "Atlas-UX-${version}-${arch}.${ext}",
    "minimumSystemVersion": "10.15.0"
  },
  "dmg": {
    "background": "build/dmg-background.png",
    "icon": "build/icon.icns",
    "iconSize": 120,
    "window": {
      "width": 660,
      "height": 480
    },
    "contents": [
      {
        "x": 180,
        "y": 240,
        "type": "file"
      },
      {
        "x": 480,
        "y": 240,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "artifactName": "Atlas-UX-${version}-${arch}.dmg",
    "title": "Atlas UX ${version}"
  },
  "pkg": {
    "installLocation": "/Applications",
    "allowAnywhere": false,
    "allowCurrentUserHome": false,
    "allowRootDirectory": false,
    "license": "LICENSE.txt"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "category": "Utility",
    "icon": "build/icons",
    "artifactName": "atlas-ux-${version}-${arch}.${ext}",
    "desktop": {
      "Name": "Atlas UX",
      "Comment": "Your Standalone AI Employee",
      "Categories": "Utility;Office;Development;"
    }
  },
  "publish": null
}