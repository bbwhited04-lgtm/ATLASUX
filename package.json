{
  "name": "atlas-ux",
  "version": "1.0.0",
  "description": "Your Standalone AI Employee - All-in-One Productivity Platform",
  "author": "Atlas UX Inc.",
  "license": "MIT",
  "homepage": "https://atlasux.com",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "package:win:msi": "npm run build && electron-builder --win msi",
    "package:win:nsis": "npm run build && electron-builder --win nsis",
    "package:win:portable": "npm run build && electron-builder --win portable"
  },
  "build": {
    "appId": "com.atlasux.app",
    "productName": "Atlas UX",
    "directories": {"output": "release"},
    "files": ["dist/**/*", "electron/**/*", "package.json"],
    "win": {"target": [{ "target": "msi", "arch": ["x64"]}],
      "sign": false,
      "verifyUpdateCodeSignature": false
    },
    "msi": {
  "warningsAsErrors": false,
  "createDesktopShortcut": true,
  "runAfterFinish": false,
  "oneClick": false
        }
        },
  
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "motion": "^11.15.0",
    "qrcode.react": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.55.0",
    "react-router": "^7.1.1",
    "react-slick": "^0.30.2",
    "recharts": "^2.15.0",
    "slick-carousel": "^1.8.1",
    "sonner": "^1.7.3",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.11",
    "wait-on": "^8.0.1"
  }
}
